<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainsceen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- לוגו מרכזי בעמוד הבית -->
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
    </ImageView>

    <!-- הודעת ברוך הבא למשתמש -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Wellcome to To-Do list App"
        android:textSize="28dp"
        android:textColor="@color/black">
    </TextView>

    <!-- כפתור כניסה שממוקם מעל כפתור ההמשך ללא כניסה -->
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skipbtn"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:background="@drawable/shape_btn01"
        android:text="Log In">
    </Button>

    <!-- כפתור המשך ללא כניסה, ממוקם בתחתית המסך -->
    <Button
        android:id="@+id/skipbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_btn02"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="@color/dark_blue">
    </Button>

</RelativeLayout>
